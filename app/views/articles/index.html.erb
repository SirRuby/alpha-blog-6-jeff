<h1 class="text-center mt-4">Listing all Posts</h1>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= article.user.username if article.user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-info" %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <div class="article-meta-details">
            <small>Created by: <%= article.user.username if article.user %>,
                                <%= time_ago_in_words(article.created_at) %> ago,
                                last updated: <% time_ago_in_words(article.updated_at) %> ago</small>
            </div>
            <%= link_to "View", article_path(article), class: "btn btn-outline-info" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-success" %>
            <%= link_to "Burn", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
          <div class="card-footer text-muted">
            <small>Created
              <%= time_ago_in_words(article.created_at) %>
              ago, edited
              <%= time_ago_in_words(article.updated_at) %>
              ago</small>
          </div>
        </div>
      </div>
    </div>
    <div class="mb-3">
      <div class="row justify-content-md-center">
        <%= link_to '[ Create new post ]', new_article_path, class: "text-info" %>
      </div>
    </div>
  <% end %>
</div>
